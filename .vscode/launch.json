    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome with ng serve",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceRoot}/lte-dev-helper-app",
            "sourceMapPathOverrides": {
                "webRoot": "${workspaceRoot}/lte-dev-helper-app",
                "webpack:/*": "${workspaceRoot}/lte-dev-helper-app/*"
            }
        },
        {
            "type": "msedge",
            "request": "launch",
            "name": "Launch lte-dev-helper-app in Edge",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/lte-dev-helper-app"
        }
    ]
}
